<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_pokemon_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/simple_padding_large"
    android:paddingTop="@dimen/simple_padding_largish"
    android:paddingEnd="@dimen/simple_padding_large"
    android:paddingBottom="@dimen/simple_padding_largish">

    <ImageView
        android:id="@+id/item_pokemon_logo_image_view"
        android:layout_width="@dimen/pokemon_sprite_size"
        android:layout_height="@dimen/pokemon_sprite_size"
        android:layout_gravity="center_vertical"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/item_pokemon_logo_image_view"
        android:orientation="vertical"
        android:paddingStart="@dimen/simple_padding_large"
        android:paddingEnd="@dimen/simple_padding_large">

        <TextView
            android:id="@+id/item_pokemon_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="@string/placeholder"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_primary"/>

        <TextView
            android:id="@+id/item_pokemon_subtitle_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="@string/placeholder"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/text_size_secondary"/>

    </LinearLayout>

</RelativeLayout>
